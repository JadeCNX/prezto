# function git-gen-commit {

if [[ -z "$1" ]]; then
  if git diff --cached --quiet; then
    echo 'No staged changes'
  else
    nvim +IssuedCommit[SETLINK-$1]
    git show --stat
  fi

else
  if git diff --cached --quiet; then
    echo 'No staged changes'
  else
    nvim +Commit
    git show --stat
  fi
fi

# }
